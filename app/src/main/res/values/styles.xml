<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Design For App Title-->
    <style name="TheSimpsonsHeaderTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--Design for Question Number Text-->
    <style name="QuestionNumberText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:text">@string/question_number_txt_format</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Design for ImageViews-->
    <style name="ImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Design For Question Text-->
    <style name="QuestionTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <!--Radio Button Design-->
    <style name="RadioButtonDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:checked">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Design For Edit Text Answer Layout-->
    <style name="EditTextLayoutDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">6</item>
    </style>

    <!--Design for the "This is" section of the Edit Text question-->
    <style name="EditTextThisIsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/edit_text_he_is</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!--Actual Edit Text Design-->
    <style name="EditTextDesign">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:hint">@string/edit_text_hint</item>
        <item name="android:inputType">text</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <!--OK Button Design-->
    <style name="EditTextOKButtonDesign">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">@string/ok_button</item>
        <item name="android:enabled">false</item>
    </style>

    <!--Edit Text Question Hint Design-->
    <style name="EditTextReminderOneTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/free_answer_question_reminder</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="EditTextReminderTwoTextStyle" parent="EditTextReminderOneTextStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/free_answer_landscape_reminder</item>
    </style>

    <!--CheckBox Design-->
    <style name="CheckBoxDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:checked">false</item>
    </style>

    <!--Question Separator Design-->
    <style name="QuestionSeparatorDesign">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!--Answer Button Design-->
    <style name="AnswerButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:background">@color/answerButtonColor</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:text">@string/answer_button_txt</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
